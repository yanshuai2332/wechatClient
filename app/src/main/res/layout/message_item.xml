<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    >
<ImageView
    android:id="@+id/photoItemRongIV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:src="@mipmap/ic_launcher"/>
    <RelativeLayout
        android:id="@+id/itemRongRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photoItemRongIV"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        >
        <RelativeLayout
            android:id="@+id/centerItemRongRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_toLeftOf="@+id/timeItemRongTV"
            >
        <TextView
            android:id="@+id/nameItemRongTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="张三"
            android:textColor="@color/rc_picprev_toolbar_transparent"/>
        <TextView
            android:id="@+id/contentItemRongTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@id/nameItemRongTV"
            android:textSize="14sp"
            android:text="哈哈哈哈哈"
            android:textColor="@color/rc_text_color_secondary"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/timeItemRongTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="14sp"

            android:text="11:28"
            android:layout_centerVertical="true"
            android:textColor="@color/rc_text_color_secondary"/>
    </RelativeLayout>

</RelativeLayout>